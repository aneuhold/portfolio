{
  "name": "svelte",
  "version": "0.0.1",
  "license": "ISC",
  "packageManager": "pnpm@10.17.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev --port 3020 --open",
    "build": "vite build",
    "preview": "pnpm run build && vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "buildAndTest": "pnpm build && pnpm test",
    "upgradeAndTest": "pnpm update --latest && pnpm buildAndTest",
    "sub:eslint": "local-npm subscribe @aneuhold/eslint-config"
  },
  "dependencies": {
    "marked": "^12.0.2",
    "mdsvex": "^0.12.6"
  },
  "devDependencies": {
    "@aneuhold/eslint-config": "^1.3.5",
    "@aneuhold/local-npm-registry": "^0.2.12",
    "@sveltejs/adapter-static": "^3.0.9",
    "@sveltejs/enhanced-img": "^0.8.2",
    "@sveltejs/kit": "^2.43.5",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@testing-library/svelte": "^5.2.8",
    "@types/marked": "^5.0.2",
    "eslint": "^9.36.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.39.6",
    "svelte-check": "^4.3.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-imagetools": "^8.0.0",
    "vitest": "^3.2.4"
  },
  "devDependenciesComments": {
    "prettier-plugin-svelte": "As of 7/26/2025 it isn't clear why this is explicitly needed. ESLint starts throwing some errors about this package if it isn't there, even though it turns out to be a transient dependency, likely through @aneuhold/eslint-config.",
    "vite-imagetools": "Needed to support the `?enhanced` image import syntax for @sveltejs/enhanced-img"
  }
}
